#compdef editor


typeset -A opt_args

local context state line


_arguments -s -S \
	"-s+[Run this script at startup]:script file:_files"\
	"--script+[Run this script at startup]:script file:_files"\
	"-h[Display this screen]"\
	"-t[Set tabsize]:number of spaces:"\
	"(-n)-a[Turn on autoindent]"\
	"-y[Save history in this file]:history file:_files"\
	"--save-hist[Save history in this file]:history file:_files"\
	"-v[Start in view mode]"\
	"(-a)-n[Turn off autoindent]"\
	"(-l)-w[Turn on linewrap]"\
	"(-w)-l[Turn off linewrap]"\
	"(-b)-c[Turn on syntax coloring]"\
	"(-c)-b[Turn off syntax coloring]"\
	"(-x)-m[Turn on mouse support]"\
	"(-m)-x[Turn off mouse support]"\
	"--help[Display this screen]"\
	"--tabsize[Set tabsize]"\
	"--autoindent[Turn on autoindent]"\
	"--view[Start in view mode]"\
	"--noautoindent[Turn off autoindent]"\
	"--linewrap[Turn on linewrap]"\
	"--longlines[Turn off linewrap]"\
	"--color[Turn on syntax coloring]"\
	"--nocolor[Turn off syntax coloring]"\
	"--mouse[Turn on mouse support]"\
	"--nomouse[Turn off mouse support]"\
	"*: file:_files "\
	&& return 0


return 1
